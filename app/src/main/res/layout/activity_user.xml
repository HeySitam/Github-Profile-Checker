<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">
    <LinearLayout
        android:id="@+id/llFollow"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="30dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Followers :"
                android:textStyle="bold"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            <TextView
                android:id="@+id/tvFollowers"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="25468"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Following :"
                android:textStyle="bold"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            <TextView
                android:id="@+id/tvFollowing"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="25468"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </LinearLayout>
    </LinearLayout>
<ImageView
    android:id="@+id/imgFull"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_below="@+id/llFollow"
    android:src="@drawable/ic_launcher_background"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tvNameFull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sitam Sardar"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_below="@+id/imgFull"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tvBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 2nd-year undergraduate CSE BTech student | Interested in android and mobile development | comfortable with both java and kotlin | still improving my skill"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:layout_below="@+id/tvNameFull"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:gravity="center"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/tvLocationFull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:layout_below="@+id/tvBio"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp"
        app:drawableLeftCompat="@drawable/my_location" />
    <LinearLayout
        android:id="@+id/llRepos"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_below="@id/tvLocationFull"
        android:layout_marginTop="5dp"
        android:layout_height="30dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="P.Repos :"
                android:textStyle="bold"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            <TextView
                android:id="@+id/tvRepos"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="25468"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="P.Gists"
                android:textStyle="bold"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            <TextView
                android:id="@+id/tvGists"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="25468"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/llRepos"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnTwitter"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/tvCompany"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"/>

</RelativeLayout>